#include <iostream>
using namespace std;

int main()
    {
    setlocale(LC_ALL, "ru"); 
    int num, e, d, s, i, mx(0);
    int M[6]; 

    cout << "Введите целое число от 100 до 999, цифры в котором не повторяются." << endl;
    cin >> num;
    e = num % 10; // получаем цифру единиц числа пользователя
    d = (num % 100) / 10; // получаем цифру десятков числа пользователя
    s = num / 100; // получаем цифру сотен числа пользователя

    while ((num < 100) || (num > 999) || (e == d) || (e == s) || (d == s)) // проверка на соответствие числа условию
    {
        cout << "Число не подходит под условие. Введите еще раз." << endl;
        cin >> num; // если число не подошло, запрашиваем еще раз
        e = num % 10; // снова получаем цифры разрядов для проверки нового числа
        d = (num % 100) / 10;
        s = num / 100;
    }

    cout << "Все возможные числа, составленные из цифр введенного числа: " << endl;
    M[0]=e*100+d*10+s; // заполняем массив вышеописанными числами
    M[1]=e*100+s*10+d;
    M[2]=d*100+e*10+s;
    M[3]=d*100+s*10+e;
    M[4]=s*100+e*10+d;
    M[5]=s*100+d*10+e;
    for (int i=0; i<6; i++) // цикл для вывода массива
       {
       if (i==5){cout << M[i] << "." << endl;} // если последнее число массива, то выводим с точкой
       else {cout << M[i] << ", ";} // если нет, то с запятой после
       if (M[i]>mx) {mx=M[i];} // попутно ищем максимальное число из массива
       }
    cout << "Максимальное из них - " << mx << "."; // выводим максимальное число из массива
    
    return 0;
    }
