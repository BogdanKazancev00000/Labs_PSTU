#include <cstdlib>
#include <iostream>
using namespace std;

int main()
    {
    setlocale(LC_ALL, "ru"); 
    srand(time(0)); // задаем начальное значение для псевдогенератора случайны чисел
    int num, x, t;
    t = 6; // присваиваем переменной количества попыток 6
    x = (1 + (rand() % 100)); // присваиваем переменной случайного числа "случайное" число

    cout << "Существует случайное целое число от 1 до 100. Попробуйте его угадать. " << endl;

    while (t>0) // пока остались попытки
         {
         cin >> num; // запрос числа
         if (num == x) // если угадано
           {
           cout << "Вы угадали число." << '\n';
           t = 0; // обнуляем количество попыток после угадывания чтобы выйти из цикла
           } 
         else
             {
             t -= 1; // если число не угадано, то уменьшаем количество попыток на 1
             if (t < 1) { cout << "Попытки кончились. Вы не угадали число " << x; } 
             else { cout << "Вы не угадали число, попробуйте еще раз. Оставшееся количество попыток - " << t << '\n'; }
             }
         }

    return 0;
    }
